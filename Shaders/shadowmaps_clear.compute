// shadowmaps_clear.compute
// Compute shader for clearing the distances for shadowmaps in the SSBO to the light farplane of 15.36f 
#version 430 core
layout(local_size_x = 32, local_size_y = 1) in;

layout(std430,  binding = 5) buffer ShadowMaps { uint depthData[]; };

void main() {
    uvec2 pixel = gl_GlobalInvocationID.xy;
    depthData[pixel.x] = 153600;
}
